<view class="contener">
    <!-- 上面 -->
    <view class="top">
        <view class="content" wx:for="{{state}}" bindtap="switchState" data-list="{{index}}">
            <view class="first">
                <text >{{item.name}}</text>
            </view>
            <view class="second">
                <text >{{item.number}}</text>
            </view>
            <view class="line" wx:if="{{index == current}}"></view>
        </view>
    </view>
    <!-- 下面 -->
    <view class="bottom">
        <view class="bottom1" wx:if="{{current==0}}"wx:for="{{state2}}">
            <image class="picture" src="{{item.srr}}" mode="aspectFill"/>
            <view class="mid" >
                <view class="m">
                    <view >
                        <text class="midTitile">{{item.title}}</text>
                    </view>
                    <view >
                        <text class="right">{{item.right}}</text>
                    </view>
                </view>
                <view >
                    <text class="midDate">{{item.date}}</text>
                 </view>
                <view >
                    <text class="midStress">{{item.stress}}</text>
                </view>
            </view>
        </view>
        <view class="bottom1" wx:else>
            <image class="picture" src="{{item.srr[current-1]}}" mode="aspectFill"/>
            <view class="mid" >
                <view class="m">
                    <view >
                        <text class="midTitile">{{item.title[current-1]}}</text>
                    </view>
                    <view >
                        <text class="right">{{item.right[current-1]}}</text>
                    </view>
                </view>
                <view >
                    <text class="midDate">{{item.date[current-1]}}</text>
                 </view>
                <view >
                    <text class="midStress">{{item.stress[current-1]}}</text>
                </view>
            </view>
        </view>
    </view>
</view>