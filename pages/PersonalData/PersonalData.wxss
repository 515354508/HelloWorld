.header{
    width:100%;
    height:350rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}


.header image{
    width:160rpx;
    height:160rpx;
    margin-top:40rpx;
    border-radius:50%; 
}

.name{
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #000000;
}

.Name{
    margin-top:30rpx; 
}

.mid{
    height:700rpx;
    width:100%;
    justify-content: center;
}

.input{
    display: flex;
    flex-direction: row;
    width:660rpx;
    justify-content: space-between;
    border-bottom: 1px solid #EEEEEE;
    height:140rpx;
    align-items: center;
    margin: 0 auto;
}

.picture2{
    width:15rpx;
    height:20rpx;
    padding-left: 30rpx;
}

.editor{
    width:40rpx;
    height:40rpx;
}

.content{
    font-family: PingFangSC-Regular;
    font-size: 13px;
    color: #666666;
    text-align: justify;
}

.input-placeholder{
    font-family: PingFangSC-Semibold;
    font-size: 13px;
    color: #333333;
    text-align: justify;
    text-align: right;
}

input{
    text-align: right;
}
.right{
    display: flex;
    align-items: center;
}

.preserves{
    background-image: linear-gradient(45deg, #FF201F 0%, #FF541F 100%);
    border-radius: 24px;
    width:622rpx;
    height:88rpx;
    text-align:center;
    vertical-align: center;
    line-height: 88rpx;
}

.preserves{
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #FFFFFF;
}


